<div id="project-<%= project.id %>" class="project">
  <div class="project-thumb">
     <%= image_tag project.image_url %>
  </div>

  <div class="project-info">
    <h1><%= link_to project.title, project %></h1>
    <p><%= project.description %></p>

    <div class="read-more">
      <%= link_to t('.production_url'),
                  project.production_url,
                  :target => 'blank' if project.production_url.present? %>
      <%= link_to t('.source_url'),
                  project.source_url,
                  :target => 'blank' if project.source_url.present? %>
    </div>
  </div>
</div>

<div class="clear"></div>
