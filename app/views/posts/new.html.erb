<% content_for :title, [t('head.title.new'), t(:title)].join(' - ') %>

<% content_for :jscript do %>
  <% javascript_include_tag 'showdown', 'wmd' %>
<% end %>

<div class="post-form">
  <%= form_for @post do |form| %>
    <%= render :partial => 'form', :locals => { :form => form } %>
    <%= render :partial => 'preview', :locals => { :post => @post } %>
    <div class="post-form-buttons">
      <%= form.submit t('.add'), :class => 'button' %>
      <%= link_to t('.back'), :back %>
    </div>
  <% end %>
</div>  
