<% content_for :title, [t('layouts.application.login'), t(:title)].join(' - ') %>

<%= form_tag sessions_path do %>
  <div id="login-form">
    <p><%= label_tag :login, t('.login') %></p>
    <p><%= text_field_tag :login, params[:login], :autofocus => true %></p>
    <p><%= label_tag :password, t('.password') %></p>
    <p><%= password_field_tag :password %></p>

    <div class="login-form-buttons">
      <%= submit_tag t('.sign_in'), :class => 'button' %>
      <%= link_to t('.back'), :back %>
    </div>

  </div>
<% end %>
